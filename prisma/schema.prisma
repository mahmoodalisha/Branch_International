generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique
  messages  Message[]
}

model Message {
  id          Int       @id @default(autoincrement())
  userId      Int
  timestamp   DateTime
  messageBody String
  createdAt   DateTime  @default(now())

  // relation to Customer
  customer    Customer  @relation(fields: [userId], references: [userId])
}
